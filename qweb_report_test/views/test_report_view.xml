<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_test_document">
		    <t t-call="report.external_layout">
		        <div class="page">
		            <!-- This is a placeholed to drag and drop snippets in the report -->
		            <div class="oe_structure"/>
		            <div class="row">
		                <div class="col-xs-2">
		                	<span t-field="o.credit" t-field-options='{"widget":"monetary", "display_currency":"res_company.currency_id"}'/>
		                </div>
		                <div class="col-xs-2">
		                	<img t-if="o.image" t-att-src="'data:image/png;base64,%s' % o.image" style="max-height: 45px;"/>
		                </div>
		                <div class="col-xs-4">
		                	<strong>
	                			<span t-field="o.name"/>
                			</strong>
		                </div>
		                <div class="col-xs-2">
		                	<span t-field="o.date"/>
		                </div>
		                <div class="col-xs-2">
                            <span t-if="o.customer">Customer</span>
                            <span t-if="not o.customer">Supplier</span>
		                </div>
	                </div>
                </div>
		    </t>
		</template>

		<template id="report_test">
		    <t t-call="report.html_container">
		        <t t-foreach="doc_ids" t-as="doc_id">
		            <t t-raw="translate_doc(doc_id, doc_model, 'lang', 'qweb_report_test.report_test_document')"/>
		        </t>
		    </t>
		</template>

		<template id="report_test_2">
			<t t-call="report.html_container">
				<t t-call="report.external_layout">
					<div class="page">
						<div class="row">
    		                <div class="col-xs-2">
			                	<strong>Image</strong>
			                </div>
			                <div class="col-xs-4">
			                	<strong>Name</strong>
			                </div>
			                <div class="col-xs-2">
			                	<strong>Date</strong>
			                </div>
			                <div class="col-xs-2">
			                	<strong>Customer/Supplier</strong>
			                </div>
			                <div class="col-xs-2">
			                	<strong>Credit</strong>
			                </div>
		                </div>
		                
						<t t-foreach="docs" t-as="o">
				            <!-- This is a placeholed to drag and drop snippets in the report -->
				            <div class="oe_structure"/>
				            <div class="row">
        		                <div class="col-xs-2">
				                	<img t-if="o.image" t-att-src="'data:image/png;base64,%s' % o.image" style="max-height: 45px;"/>
				                </div>
				                <div class="col-xs-4">
				                	<strong>
			                			<span t-field="o.name"/>
		                			</strong>
				                </div>
				                <div class="col-xs-2">
				                	<span t-field="o.date"/>
				                </div>
				                <div class="col-xs-2">
                                    <span t-if="o.customer">Customer</span>
                                    <span t-if="not o.customer">Supplier</span>
				                </div>
				                <div class="col-xs-2">
				                	<span t-field="o.credit" t-field-options='{"widget":"monetary", "display_currency":"res_company.currency_id"}'/>
				                </div>
			                </div>
			    		</t>
			    	</div>
		    	</t>
		    </t>
		</template>
	</data>
</openerp>
